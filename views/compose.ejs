<%- include("partials/header")-%>
<form action="/compose" method="POST"> 
    
    <h1>Compose</h1>
    <div class="form-group">
        <label class="form-label" for="contentHead">Title</label>
        <input class="form-control" type="text" name="contentHead" id="contentHead" placeholder="Write your title!...">
    </div>
    <div class="form-group">
        <label class="form-label" for="post">Post</label>
        <textarea class="form-control" name="contentBody" id="post" cols="30" rows="8"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary mt-2" name="publishBtn" id="publishBtn" type="submit">Publish</button>
    </div>
</form>

<%- include("partials/footer")-%>